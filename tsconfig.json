{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "dist",

    "types": ["node", "jest"],

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
